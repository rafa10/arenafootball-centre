{% extends "ArenafootballPlateformBundle::layout.html.twig" %}

{% block title %} Nos terrain - {{ parent() }}{% endblock %}


{% block script %}
			
			<script src="{{ asset('assets/js/modernizr.custom.js') }}"></script>
			{#<script type="text/javascript" src="{{ asset('assets/js/bootstrap-datepicker.js') }}"></script>#}
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
			<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
			<script src="{{ asset('assets/js/app.js') }}"></script>

{% endblock %}

{% block body %}
	
	<body>
		<div class="container">
		
		<div class="main">
			<!--header-->
			  {{ include("ArenafootballPlateformBundle:Menu:header_menu_website_content.html.twig") }} 
			<!--content-->
			
			<div class="main">	

				<div class="column three_small">

		        	<!--<p class="text_corps" ><strong>Ajouter votre stade des maintemant</strong></p>
					<p class="text_corps2" >Accéder ou Créer un espace personnel pour la gestion de votre stade </p>-->						
					<br>
					<div class="item-icon">
						<div class="post_small">
							<div class="icon icon_stade_m_small"><img src="{{ asset('assets/football/png/football118.png') }}" width="70" height="70" alt="icon" /></div>
						</div>
						<div class="post_small">
							<div class="icon icon_stade_m_small"><img src="{{ asset('assets/image/videoser.png') }}" width="70" height="70" alt="icon" /></div>
						</div>
						<div class="post_small">
							<div class="icon icon_stade_m_small"><img src="{{ asset('assets/image/movie36.png') }}" width="70" height="70" alt="icon" /></div>
						</div>
						<div class="post_small">
							<div class="icon icon_stade_m_small"><img src="{{ asset('assets/image/play.png') }}" width="70" height="70" alt="icon" /></div>
						</div>
						<div class="post_small">
							<div class="icon icon_stade_m_small"><img src="{{ asset('assets/football/png/football96.png') }}" width="70" height="70" alt="icon" /></div>
						</div>						
							
					</div>
		        </div>
		        
		       <div class="column instruction">
			       	

			       	<div class="content_centre">
			       		
			       		

			       		<div style="margin: 0 auto; width:100%;" class="region">
							<h3 class="text_region">Votre match en vidéo</h3><br>							
							<div  class="form_match">
		       			      <form  name="video" action="{{ path('arenafootball_plateform_video') }}" method="POST">
		       					<table style="width:60%;">		       					
		       						<tr>
										<td style="width:5%; text-align:center; color:#333;">
											<b style="font-size: 35px;" class="icon-office"> </b>
										</td>
										<td>
											<select name="centre" required>
												<option style="background:#ccc;" value="">Choisissez un centre...</option>
												{% if centreall %}
												{% for item in centreall %}	
	                    							<option value="{{ item.id }}">{{ item.nom }} - {{ item.region }}</option>
		       									{% endfor %}
		       								{% endif %}	                    						
	                    					</select>
										</td>								
										<td style="text-align:center; width:5%; color:#333;">
											<b style="font-size: 35px;" class="icon-calendar"> </b>
										</td>
										<td>
											<input type="date" name="date" value="{{ "now"|date('d-m-Y') }}" placeholder="JJ-MM-AAAA" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" required/>
										</td>														
								        <td>
									   		<aside style="text-align:center;">
												<button type="submit"><span class="icon-search"> </span> Recherche</button>
											</aside>
										</td>
									</tr>								
								</table>	
							   </form><br>
				       		</div>
						</div>

				    
				        <div style="margin-top:5px; width:1050px;" class="component">						
							<table border="0"> 
								   <thead>
										<th style=" background:#333; " ><span class="icon-office"> </span>
											<b>Terrain</b>
										</th>
										<th style=" background:#333; " ><span class="icon-user"> </span>
											<b>Client</b>
										</th>
										<th style=" background:#333; " ><span class="icon-calendar"> </span>
											<b>Date</b>
										</th>
										<th style=" background:#333; " ><span class="icon-stopwatch"> </span>
											<b>Temps</b>
										</th>
										<th style=" background:#333; " ><span class="icon-camera2"> </span>
											<b>Vidéo</b>
										</th>
								   </thead>
								   {% if video %}
								   {% for item in video %}					
								   <tbody>
								   		<tr>
								   			<td>{{ item.terrain.nom|striptags }}</td>
								   			<td>{{ item.client.nom }}&nbsp;{{ item.client.prenom }}</td>
								   			<td>{{ item.DateGo|date('d-m-Y') }}</td>
								   			<td>{{ item.time|date('H:i') }}</td>
								   			<td>
								   				<iframe width="20" height="20" src="{{ item.url }}" frameborder="0" allowfullscreen></iframe>
								   			</td>
								   		</tr>						
								   </tbody>
								   {% endfor %}
								   {% else %}
								   <tbody>
								   		<tr>
								   			<td colspan="5" ><br><br><span class="icon-notification"> </span>Aucun vidéo de cette date.<br><br><br></td>
								   		</tr>						
								   </tbody>
							       {% endif %}
							</table>
					    </div>
							<!--**********************************************************************-->
							

						
				      
					</div>     
			       
							      

		     </div>  </div>		                   
			

			</div>
			<!--footer-->
			<footer>
				{{ include("ArenafootballPlateformBundle:php:footer.html.twig") }}  
			</footer> 
		</div><!-- /container -->		
		{% block javascript %}			
			<script src="{{ asset('assets/js/classie.js') }}"></script>
			<script src="{{ asset('assets/js/gnmenu.js') }}"></script>
			<script>
				new gnMenu( document.getElementById( 'gn-menu' ) );
			</script>
			
		{% endblock %}

{% endblock %}
