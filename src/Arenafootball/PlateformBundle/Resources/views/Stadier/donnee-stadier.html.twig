{% extends "ArenafootballPlateformBundle::layout.html.twig" %}

{% block title %} Espace stadier - {{ parent() }}{% endblock %}

{% block body %}
	<body>
		<div class="container">
			
			{{ include("ArenafootballPlateformBundle:Menu:header_menu.html.twig") }}
				
			<div class="main">
			
			<div class="column instruction">
             
                 
               <div class="nav_left">
               		{{ include("ArenafootballPlateformBundle:php:info_compte_stadier.html.twig") }}
               </div>
               
               <div style="width:58%;" class="content_center"><br>
                <div id="info_stadier" class="booking">
		                 {{ form_start(form) }}
		                	<h1 style="background:#333; color:#2ecc71; padding: 13px; text-align:center;">Gestion données stadier</h1>
		                		<br>
		                		{{ form_errors(form) }}	                			                		
		                		<table>
		                				 {% for message in app.session.flashbag.get('info') %}
                                           <tr>
                                               <th colspan="2" style="text-align:center; background:#2ecc71; color:#fff;">
                                                <b class="icon-notification"> </b>{{ message }}
                                               </th>
                                           </tr>
                                        {% endfor %}
		                				<tr>
		                    				<th>{{ form_label(form.civilite, "Civilité") }} :</th>
		                    				<td>{{ form_widget(form.civilite) }}<br>
		                    					<span class="red_color">{{ form_errors(form.civilite) }}</span>
		                    				</td>
		                    			</tr>
		                    			<tr>
		                    				<th>{{ form_label(form.nom, "Nom") }} :</th>
		                    				<td>{{ form_widget(form.nom) }}<br>
		                    					<span class="red_color">{{ form_errors(form.nom) }}</span>
		                    				</td>
		                    			</tr>
		                    			<tr>
		                    				<th>{{ form_label(form.prenom, "Prénom") }} :</th>
		                    				<td>{{ form_widget(form.prenom) }}<br>
		                    					<span class="red_color">{{ form_errors(form.prenom) }}</span>
		                    				</td>
		                    			</tr>
		                    			<tr>
		                    				<th>{{ form_label(form.cin, "CIN") }} :</th>
		                    				<td>{{ form_widget(form.cin) }}<br>
		                    					<span class="red_color">{{ form_errors(form.cin) }}</span>
		                    				</td>
		                    			</tr>
		                    			<tr>
		                    				<th>{{ form_label(form.phone, "Télephane") }} :</th>
		                    				<td>{{ form_widget(form.phone) }}<br>
		                    					<span class="red_color">{{ form_errors(form.phone) }}</span>
		                    				</td>
		                    			</tr>
		                    			<tr>
		                    				<th>{{ form_label(form.adresse, "Adresse") }} :</th>
		                    				<td>{{ form_widget(form.adresse) }}<br>
		                    					<span class="red_color">{{ form_errors(form.adresse) }}</span>
		                    				</td>
		                    			</tr>
		                    			<tr>
		                    				<th>{{ form_label(form.login, "Email") }} :</th>
		                    				<td>{{ form_widget(form.login) }}<br>
		                    					<span class="red_color">{{ form_errors(form.login) }}</span>
		                    				</td>
		                    			</tr>
		                    			
                					
                					<!--***************************************form_centre*****************************************-->
                					
                					<tr>
	                    				<th style="display:inline-block; background:#FFF;">Information du centre</th>
	                    			</tr>
	                				<tr>
	                    				<th>{{ form_label(form.centre.nom, "Nom du centre") }} :</th>
	                    				<td>{{ form_widget(form.centre.nom) }}<br>
	                    					<span class="red_color">{{ form_errors(form.centre.nom) }}</span>
	                    				</td>
	                    			</tr>
	                    			<tr>
	                    				<th>{{ form_label(form.centre.nbTerrain, "Nombre du terrain") }} :</th>
	                    				<td>{{ form_widget(form.centre.nbTerrain) }}<br>
	                    					<span class="red_color">{{ form_errors(form.centre.nbTerrain) }}</span>
	                    				</td>
	                    			</tr>
	                    			<tr>
	                    				<th>{{ form_label(form.centre.ville, "Ville du centre") }} :</th>
	                    				<td>{{ form_widget(form.centre.ville) }}<br>
	                    					<span class="red_color">{{ form_errors(form.centre.ville) }}</span>
	                    				</td>
	                    			</tr>
	                    			<tr>
	                    				<th>{{ form_label(form.centre.region, "Région du centre") }} :</th>
	                    				<td>{{ form_widget(form.centre.region) }}<br>
	                    				    <span class="red_color">{{ form_errors(form.centre.region) }}</span>
	                    				</td>
	                    			</tr>
	                    			<tr>
	                    				<th>{{ form_label(form.centre.description, "Description du centre") }} :</th>
	                    				<td>{{ form_widget(form.centre.description) }}<br>
	                    					<span class="red_color">{{ form_errors(form.centre.description) }}</span>
	                    				</td>
	                    			</tr>	                    								                
	                		</table>
	                        <aside style="text-align:center;"><br>
	                                <button type="submit">Modifier données centre</button>
	                        </aside><br>                       
		                {{ form_end(form) }}
		                </div><br>

			            <div class="nav_right"></div>


			        </div>
			    </div>
			</div>
			<footer>
				{{ include("ArenafootballPlateformBundle:php:footer.html.twig") }} 
			</footer>
		</div><!-- /container -->
		{% block javascript %}
			<script src="{{ asset('assets/js/modernizr.custom.js') }}"></script>
			<script src="{{ asset('assets/js/smooth_target.js') }}"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
			<script src="{{ asset('assets/js/classie.js') }}"></script>
			<script src="{{ asset('assets/js/gnmenu.js') }}"></script>
			<script>
				new gnMenu( document.getElementById( 'gn-menu' ) );
			</script>
		{% endblock %}
{% endblock %}

		
