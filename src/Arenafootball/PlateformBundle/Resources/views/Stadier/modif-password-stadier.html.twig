{% extends "ArenafootballPlateformBundle::layout.html.twig" %}

{% block title %} Espace stadier - {{ parent() }}{% endblock %}

{% block body %}
	<body>
		<div class="container">
			
			{{ include("ArenafootballPlateformBundle:Menu:header_menu.html.twig") }}
				
			<div class="main">
			
			<div class="column instruction">
             
                 
               <div class="nav_left">
               		{{ include("ArenafootballPlateformBundle:php:info_compte_stadier.html.twig") }}
               </div>
               
               <div style="width:58%;" class="content_center"><br>

		                <div id="info_pass" class="booking" >
                        {{ form_start(form) }}
                        <h1 style="background:#333; color:#2ecc71; padding: 13px; text-align:center;"> Modifiez votre mot de passe</h1>
                                <br>                           
                               <table style="border:none; width:70%"><br>
                               			<tr><th colspan="2"><span class="icon-notification"> </span> <span class="red_color">
		                					{{ form_errors(form) }}	
                                            {{ form_errors(form.password) }}
                                        	</span></th>
                                    	</tr>
                               			{% for message in app.session.flashbag.get('passmodif') %}
	                                       <tr>
	                                           <th colspan="2" style="text-align:center; background:#2ecc71; color:#fff;">
	                                           	<b class="icon-notification"> </b>{{ message }}
	                                           </th>
	                                       </tr>
	                                    {% endfor %}                                        
                                        <tr>
		                    				<th style="width:50%;">Mot de passe actuel:</th>
		                    				<td style="width:50%;"><input type="text" name="oldpassword" value="{{oldpassword}}" disabled="true"></td>
		                    			</tr>
                                        <tr>
		                    				<th>{{ form_label(form.password, "Nouveau mot de passe") }} :</th>
		                    				<td>{{ form_widget(form.password.first) }}</td>
		                    			</tr>
		                    			<tr>
		                    				<th>{{ form_label(form.password, "Confirmation") }} :</th>
		                    				<td>{{ form_widget(form.password.second) }}</td>
		                    			</tr>
                                </table>
                                <aside style="text-align:center;" ><br>
                                    <button type="submit" >Modifier le mot de passe</button>
                                </aside><br>
                            {{ form_end(form) }} 
                    </div>
		               
			            


			            <div class="nav_right"></div>
			        </div>
			    </div>
			</div>

                

                
			<footer>
				{{ include("ArenafootballPlateformBundle:php:footer.html.twig") }} 
			</footer>

		</div><!-- /container -->
		{% block javascript %}
			<script src="{{ asset('assets/js/modernizr.custom.js') }}"></script>
			<script src="{{ asset('assets/js/smooth_target.js') }}"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
			<script src="{{ asset('assets/js/classie.js') }}"></script>
			<script src="{{ asset('assets/js/gnmenu.js') }}"></script>
			<script>
				new gnMenu( document.getElementById( 'gn-menu' ) );
			</script>
		{% endblock %}
{% endblock %}

		
