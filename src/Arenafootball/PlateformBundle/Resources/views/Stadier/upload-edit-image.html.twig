{% extends "ArenafootballPlateformBundle::layout.html.twig" %}

{% block title %} Espace stadier - {{ parent() }}{% endblock %}

{% block body %}
	<body>
		<div class="container">
			
			{{ include("ArenafootballPlateformBundle:Menu:header_menu.html.twig") }}
				
			<div class="main">
			
			<div class="column instruction">
             
                 
               
               
               <div class="content_center"><br>
                
		        <div id="photo" style="width:750px;" class="booking" >
                    {{ form_start(form) }}  
                        <h1 style="background:#333; color:#2ecc71; padding: 12px; text-align:center;"> Modifiez image</h1>
                                <br>                                                                
                                                             
                               <table style="border:none; width:70%">
                               		<tr>
                               			<td colspan="2" style="background:#FFF;">
                               				{% for item in img %}
                               					<img src="{{ asset('uploads/' ~ item.url) }}" alt="{{ item.alt}}" width="140" height="130">
                               				{% endfor %}
                               			</td>
                               		</tr>	
                               		<tr style="display:none;" >
                                        <th style="width:50%;">{{ form_label(form.centre, "Nom du centre") }} :</th>
                                        <td style="width:50%;"> {{ form_widget(form.centre) }}</td>
                                    </tr>
                                    <tr>
	                    				          <th style="width:50%;">{{ form_label(form.file, "Charger photo") }} :</th>
                                        <td style="width:50%;"> {{ form_widget(form.file) }}</td>
                                    </tr>
                                    <tr>
	                    				          <th style="width:50%;">{{ form_label(form.alt, "Postion du photo") }} :</th>
                                        <td style="width:50%;"> {{ form_widget(form.alt) }}</td>
                                    </tr>
                                    
                                </table>

                                <aside style="text-align:center;" ><br>                                    
                                    <a class="button" href="javascript:history.back()">Retour</a>
                                    <button type="submit" >Modifier photo</button>
                                    <button type="reset">Annuler</button>
                                </aside><br>
                    {{ form_end(form) }} 
                    	      
                </div> 

			        
			    </div>
			</div></div>

             

                
			<footer>
				{{ include("ArenafootballPlateformBundle:php:footer.html.twig") }} 
			</footer>

		</div><!-- /container -->
		{% block javascript %}
			<script src="{{ asset('assets/js/modernizr.custom.js') }}"></script>
			<script src="{{ asset('assets/js/smooth_target.js') }}"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
			<script src="{{ asset('assets/js/classie.js') }}"></script>
			<script src="{{ asset('assets/js/gnmenu.js') }}"></script>
			<script>
				new gnMenu( document.getElementById( 'gn-menu' ) );
			</script>
		{% endblock %}
{% endblock %}

		
