{% extends "ArenafootballPlateformBundle::layout.html.twig" %}

{% block title %} Espace stadier - {{ parent() }}{% endblock %}

{% block body %}
	<body>
		<div class="container">
			{{ include("ArenafootballPlateformBundle:Menu:header_menu.html.twig") }}
				
			<div class="main">
            
            <div class="column instruction">             
                 
               <div class="nav_left">
                    {{ include("ArenafootballPlateformBundle:php:books_match&abonnement.html.twig") }}    
               </div>
               
               
               <div style="width:58%" class="content_center">  
                 <br>
	            <!--_____________________________________________reservation matche____________________________________________-->
	            
                <div id="Rmatche" style="display:none;" class="booking" >
                               {{ form_start(formM) }}                       
                                <h1 style="background:#333; color:#2ecc71; padding: 13px; text-align:center;" >
                                    <span class="icon-uniE600"> </span>Formulaire de réservation Match 
                                </h1>                                
                                <br>                       
                                <table style="width:80%;">                                  
                                    <tr class="hide">
                                        <th>{{ form_label(formM.centre, "Non du centre") }} :</th>
                                        <td>{{ form_widget(formM.centre) }}</td>
                                    </tr>
                                    <tr>
                                        <th style="width:50%;">{{ form_label(formM.client, "Client") }} :</th>
                                        <td style="width:50%;">{{ form_widget(formM.client) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formM.terrain, "Terrain") }} :</th>
                                        <td>{{ form_widget(formM.terrain) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formM.date, "Date de réservation") }} :</th>
                                        <td>{{ form_widget(formM.date) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formM.time, "Heure de réservation") }} :</th>
                                        <td>{{ form_widget(formM.time) }}</td>
                                    </tr>                              
                                    <tr>
                                        <th>{{ form_label(formM.prix, "Prix") }}:</th>
                                        <td>{{ form_widget(formM.prix) }}  </td>
                                    </tr>
                                     <tr class="hide">
                                        <th>{{ form_label(formM.status, "Etats") }}:</th>
                                        <td>{{ form_widget(formM.status) }}  </td>
                                    </tr>                                    
                            </table>
                            <aside style="text-align:center;" ><br>
                                           <button type="submit">Réserver match</button> 
                                           <button type="reset">Annuler</button> 
                                </aside><br>                               
                        {{ form_end(formM) }}
                    </div>                    
	            	
	            <!--_______________________________________reservation Abonnement_____________________________________________-->
	                
	            <div id="Rabonnement" class="booking">
                    {{ form_start(formA) }}
                        <h1 style="background:#333; font-size:1.4em; color:#2ecc71; padding:13px; text-align:center;">
                            <span class="icon-feed2"> </span>Formulaire de réservation abonnement 
                        </h1>
                            <br>                       
                            <table style="width:80%;">
                                    <tr class="hide">
                                        <th>{{ form_label(formA.centre, "Non du centre") }} :</th>
                                        <td>{{ form_widget(formA.centre) }}</td>
                                    </tr>
                                    <tr>
                                        <th style="width:50%;">{{ form_label(formA.client, "Client") }} :</th>
                                        <td style="width:50%;">{{ form_widget(formA.client) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formA.terrain, "Terrain") }} :</th>
                                        <td>{{ form_widget(formA.terrain) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formA.dateGo, "Date de séance ") }} :</th>
                                        <td>{{ form_widget(formA.dateGo) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formA.nbSceance, "Numéro de séances") }} :</th>
                                        <td>{{ form_widget(formA.nbSceance) }}</td>
                                    </tr>                                                                        
                                    <tr>
                                        <th>{{ form_label(formA.day, "Jour de matche") }} :</th>
                                        <td>{{ form_widget(formA.day) }} </td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formA.time, "Temps de réservation") }} :</th>
                                        <td>{{ form_widget(formA.time) }}</td>
                                    </tr>                              
                                    <tr>
                                        <th>{{ form_label(formA.prix, "Prix") }}:</th>
                                        <td>{{ form_widget(formA.prix) }}  </td>
                                    </tr>
                                    
                            </table>
                            <aside style="text-align:center;"><br>                               
                                    <button type="submit">Réserver abonnement</button>
                                    <button type="reset">Annuler</button> 
                            </aside><br>                               
                        {{ form_end(formA) }}                    
                    </div>


                     <!--_______________________________________reservation académie___________________________________________-->
                    
                <div id="Racademie" style="display:none;" class="booking">
                    {{ form_start(formC) }}
                        <h1 style="background:#333; font-size:1.4em; color:#2ecc71; padding:13px; text-align:center;">
                            <span class="icon-users"> </span>Formulaire de réservation académie 
                        </h1>
                            <br>                       
                            <table style="width:80%;">
                                    <tr class="hide">
                                        <th>{{ form_label(formC.centre, "Non du centre") }} :</th>
                                        <td>{{ form_widget(formC.centre) }}</td>
                                    </tr>
                                    <tr>
                                        <th style="width:50%;">{{ form_label(formC.terrain, "Terrain") }} :</th>
                                        <td style="width:50%;">{{ form_widget(formC.terrain) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formC.dateGo, "Date de séance ") }} :</th>
                                        <td>{{ form_widget(formC.dateGo) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formC.nbSceance, "Numéro de séances") }} :</th>
                                        <td>{{ form_widget(formC.nbSceance) }}</td>
                                    </tr>                                                                        
                                    <tr>
                                        <th>{{ form_label(formC.day, "Jour de matche") }} :</th>
                                        <td>{{ form_widget(formC.day) }} </td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(formC.time, "Temps de réservation") }} :</th>
                                        <td>{{ form_widget(formC.time) }}</td>
                                    </tr>                              
                                    <tr>
                                        <th>{{ form_label(formC.prix, "Prix") }}:</th>
                                        <td>{{ form_widget(formC.prix) }}  </td>
                                    </tr>
                                    
                            </table>
                            <aside style="text-align:center;"><br>                               
                                    <button type="submit">Réserver académie</button>
                                    <button type="reset">Annuler</button> 
                            </aside><br>                               
                        {{ form_end(formC) }}                    
                    </div>


                    <div class="region">
                        <h3 class="text_region">Annex des séances</h3>
                        {% for  item in terrain %}                        
                            <ul>
                                <li><img src="{{ asset('assets/image/football96.png') }}" width="30" height="30" alt="terrain" />
                                 <b>{{ item.nom }}</b></li>
                            {% for  sc in sceance %}
                            {% if item.id == sc.terrain.id %} 
                                <ul>
                                    <li><b class="icon-stopwatch"> </b> séance: {{ sc.timeGo|date('H:i') }}</li>
                                </ul>
                            {% endif %}
                            {% endfor %}    
                            </ul> 
                        {% endfor %}              
                    </div><p></p>
	            </div>
                                
                
