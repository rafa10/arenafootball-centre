{% extends "ArenafootballPlateformBundle::layout.html.twig" %}

{% block title %} Espace stadier - {{ parent() }}{% endblock %}

{% block body %}
	<body>
		<div class="container">
			{{ include("ArenafootballPlateformBundle:Menu:header_menu.html.twig") }}
				
			<div class="main">
            
            <div class="column instruction">             
                 
               <div class="nav_left">
                    <div class="region">
                        <h3 class="text_region">Annex des séances</h3>
                        {% for  item in terrain %}                        
                            <ul>
                                <li><img src="{{ asset('assets/image/football96.png') }}" width="30" height="30" alt="terrain" />
                                 <b>{{ item.nom }}</b></li>
                            {% for  sc in sceance %}
                            {% if item.id == sc.terrain.id %} 
                                <ul>
                                    <li><b class="icon-stopwatch"> </b> séance: {{ sc.timeGo|date('H:i') }}</li>
                                </ul>
                            {% endif %}
                            {% endfor %}    
                            </ul> 
                        {% endfor %}              
                    </div><p></p>   
               </div>
               
               <div style="width:58%;" class="content_center">  
                 <br>
	            
	                
	            <div id="Rabonnement" style="width:750px;" class="booking">
                {{ form_start(form) }}
                        <h1 style="background:#333; font-size:1.4em; color:#2ecc71; padding: 13px; text-align:center;">Modifiez abonnement </h1>
                            <br>                       
                            <table style="width:80%;">
                                    <tr class="hide">
                                        <th>{{ form_label(form.centre, "Non du centre") }} :</th>
                                        <td>{{ form_widget(form.centre) }}</td>
                                    </tr>
                                    <tr>
                                        <th style="width:50%;">{{ form_label(form.client, "Client") }} :</th>
                                        <td style="width:50%;">{{ form_widget(form.client) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(form.terrain, "Terrain") }} :</th>
                                        <td>{{ form_widget(form.terrain) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(form.dateGo, "Date début abonnement") }} :</th>
                                        <td>{{ form_widget(form.dateGo) }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(form.nbSceance, "Nombre des séances") }} :</th>
                                        <td>{{ form_widget(form.nbSceance) }}</td>
                                    </tr>                                                                        
                                    <tr>
                                        <th>{{ form_label(form.day, "Jour de matche") }} :</th>
                                        <td>{{ form_widget(form.day) }} </td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(form.time, "Temps de réservation") }} :</th>
                                        <td>{{ form_widget(form.time) }}</td>
                                    </tr>                              
                                    <tr>
                                        <th>{{ form_label(form.prix, "Prix") }}:</th>
                                        <td>{{ form_widget(form.prix) }}  </td>
                                    </tr>
                                    <tr>
                                        <th>{{ form_label(form.status, "Etat de réservation") }}:</th>
                                        <td>{{ form_widget(form.status) }}  </td>
                                    </tr>
                                    
                            </table>
                            <aside style="text-align:center;"><br>
                                    <a class="button" href="javascript:history.back()">Retour</a>
                                    <button type="submit">Modifiez abonnement</button>                                   
                                    <button type="reset">Annuler</button>                                    
                            </aside><br>                               
                        {{ form_end(form) }}                    
                    </div>
	            </div>
                                
            
             </div>
         </div>
			<footer>
				{{ include("ArenafootballPlateformBundle:php:footer.html.twig") }} 
			</footer>

		</div><!-- /container -->
        {% block javascript %}
            <script src="{{ asset('assets/js/modernizr.custom.js') }}"></script>
            <script src="{{ asset('assets/js/smooth_target.js') }}"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
            <script src="{{ asset('assets/js/classie.js') }}"></script>
            <script src="{{ asset('assets/js/gnmenu.js') }}"></script>
            <script>
                new gnMenu( document.getElementById( 'gn-menu' ) );
            </script>
        {% endblock %}
{% endblock %}